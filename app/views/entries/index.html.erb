<div id="accordion">
  <% @students.each do |student| %>
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse-<%= student.id %>" aria-expanded="true" aria-controls="collapseOne">
          <%= student.name %>
        </button>
      </h5>
    </div>
    <div id="collapse-<%= student.id %>" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= link_to "Add New Entry", new_student_entry_path(student), class: "btn btn-sm btn-primary" %></li>
          <% student.entries.each do |entry| %>
          <li class="list-group-item"><%= link_to entry.title, student_entry_path(student, entry) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <% end %>
</div>