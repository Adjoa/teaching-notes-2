<div class="card w-75 mx-auto">
  <div class="card-body">
    <%= form_for @event do |f| %>
    <fieldset>
      <div class="form-group row col-md-8">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control col-md-6"  %>
      </div>
      <div class="form-group row col-md-8">
        <%= f.label :venue %>
        <%= f.text_field :venue, class: "form-control col-md-6" %>
      </div>
      <div class="form-group row col-md-8">
        <%= f.label :time %>
        <%= f.datetime_select(:time, default: Date.today, ampm: true, class: "form-control" ) %>
      </div>
    <strong>
    <%= link_to "Cancel", rehearsals_path, class: "btn btn-sm btn-secondary" %>
    </strong>
    <%= f.submit %>
    </fieldset>
    <% end %>
  </div>
</div>
