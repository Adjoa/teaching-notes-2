<div class="form-wrapper">
  <fieldset>
    <legend><h2>Log In</h2></legend>
    <table>
      <%= form_tag('/login') do %>
      <tr>
        <td><%= label_tag 'email' %></td>
        <td><%= email_field_tag(:email) %></td>
      </tr>
      <tr>
        <td><%= label_tag 'password' %></td>
        <td><%= password_field_tag(:password) %></td>
      </tr>
      <tr>
        <td>
          <%= submit_tag 'Log In' %>
        </td>
      </tr>
      <% end %>
    </table>
  </fieldset>
</div>