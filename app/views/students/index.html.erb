<nav class="nav">
  <h2 class="navbar-text">Students</h2>
</nav>

<table>
  <tr>
    <th><strong>Name</strong></th>
    <th><strong>Email</strong></th>
    <th><strong>Details</strong></th>
    <th></th>
    <th>
      <strong>
      <%= link_to "Add Student", new_student_path, class: "btn btn-sm btn-primary" %>
      </strong>
    </th>
  </tr>
  <% @students.each do |student| %>
  <tr>
    <td><%= student.name %></td>
    <td><%= student.email %></td>
    <td><%= link_to "View Info", student_path(student) %></td>
    <td><%= link_to "Edit", edit_student_path(student) %></td>
  </tr>
  <% end %>
</table>