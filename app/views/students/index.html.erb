<nav class="nav">
  <h2 class="navbar-text">Students</h2>
</nav>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><strong>Name</strong></th>
      <th scope="col"><strong>Email</strong></th>
      <th scope="col"><strong>Details</strong></th>
      <th scope="col"></th>
      <th scope="col">
        <strong>
        <%= link_to "Add Student", new_student_path, class: "btn btn-sm btn-primary" %>
        </strong>
      </th>
    </tr>
  </thead>
  <% @students.each do |student| %>
  <tr>
    <td><%= student.name %></td>
    <td><%= student.email %></td>
    <td><%= link_to "View Info", student_path(student) %></td>
    <td><%= link_to "Edit", edit_student_path(student) %></td>
    <td>
    <%= form_for student, method: :delete do |f| %>
        <%= f.submit "Delete" %>
    <% end %>
    </td>
  </tr>
  <% end %>
</table>