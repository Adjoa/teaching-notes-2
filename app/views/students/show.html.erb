<fieldset>
<legend><h2>Student Info</h2></legend>
  <table>
    <tr>
      <td><strong>Name</strong></td>
      <td><%= @student.name %></td>
    </tr>
    <tr>
      <td><strong>Email</strong></td>
      <td><%= @student.email %></td>
    </tr>
  </table>
</fieldset>
<strong>
  <%= link_to "Back", students_path, class: "btn btn-sm btn-secondary" %>
</strong>
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#entries" role="tab" aria-controls="home" aria-selected="true">Entries</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#rehearsals" role="tab" aria-controls="profile" aria-selected="false">Rehearsals</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="entries" role="tabpanel" aria-labelledby="entries-tab">
   <ul class="list-group list-group-flush">
     <li class="list-group-item"><%= link_to "Add New Entry", new_student_entry_path(@student, @entry), class: "btn btn-sm btn-primary" %></li>
      <% @student.entries.each do |entry| %>
      <li class="list-group-item">
        <%= link_to entry.title, student_entry_path(@student, entry) %>
        <%= form_for entry, method: :delete do |f| %>
        <%= f.submit "Delete" %>
        <% end %>
        </li>
      <% end %>
    </ul> 
  </div>
  <div class="tab-pane fade" id="rehearsals" role="tabpanel" aria-labelledby="rehearsals-tab">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= link_to "Add New Rehearsal", rehearsals_path, class: "btn btn-sm btn-primary" %></li>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"><strong>Time</strong></th>  
            <th scope="col"><strong>Rehearsal</strong></th>  
            <th scope="col"><strong>Venue</strong></th>
          </tr>
        </thead>
        <% @student.rehearsals_attending.each do |rehearsal| %>
        <tr>
          <td>
            <%= rehearsal.time.strftime("%B %-d, %Y") %> at <%= rehearsal.time.strftime("%k:%M")%>
          </td>
          <td>
            <%= link_to rehearsal.event.name, rehearsal_path(rehearsal) %>
          </td>
          <td>
            <%= rehearsal.venue %>
          </td>
        </tr>
        <% end %>
      </table>
    </ul> 
  </div>
</div>