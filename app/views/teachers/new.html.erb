<div class="form-wrapper">
  <fieldset>
    <legend><h2>Sign Up</h2></legend>
    <table>
      <%= form_for @teacher do |f| %>
      <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name %></td>    
      </tr>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td>
          <%= f.submit %>
        </td>
      </tr>
      <% end %>
    </table>
  </fieldset>
</div>